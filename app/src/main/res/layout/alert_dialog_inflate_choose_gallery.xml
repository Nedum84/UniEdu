<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">


    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#ccc"
        android:layout_marginTop="12dp"/>
    <LinearLayout
        android:id="@+id/fromGallery"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="8dp"
        android:paddingStart="12dp"
        android:paddingLeft="12dp"
        tools:ignore="UseCompoundDrawables">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/design_gradient_diff_colors1"
            app:srcCompat="@drawable/ic_insert_photo_black_24dp"
            tools:ignore="ContentDescription"
            android:padding="8dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#222"
            android:textSize="18sp"
            android:padding="10dp"
            android:textAlignment="center"
            android:text="Gallery"/>

    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#ccc"/>

    <LinearLayout
        android:id="@+id/fromCapture"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="8dp"
        android:paddingStart="12dp"
        android:paddingLeft="12dp">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/design_gradient_diff_colors2"
            app:srcCompat="@drawable/ic_photo_camera_black_24dp"
            tools:ignore="ContentDescription"
            android:padding="8dp"
            app:tint="@color/colorWhite" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#222"
            android:textSize="18sp"
            android:padding="10dp"
            android:textAlignment="center"
            android:text="Camera"/>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#ccc"
        android:visibility="gone"/>

    <LinearLayout
        android:id="@+id/removeImage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="8dp"
        android:paddingStart="12dp"
        android:paddingLeft="12dp"
        android:visibility="gone">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/design_circle_border2"
            android:padding="8dp"
            app:srcCompat="@drawable/ic_delete_black_24dp"
            app:tint="@color/colorWhite"
            tools:ignore="ContentDescription" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:text="Remove Photo"
            android:textAlignment="center"
            android:textColor="#222"
            android:textSize="18sp" />

    </LinearLayout>
</LinearLayout>