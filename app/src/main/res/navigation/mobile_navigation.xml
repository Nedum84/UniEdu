<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@id/nav_home">

    <fragment
        android:id="@+id/nav_home"
        android:name="com.uniedu.ui.fragment.FragmentHome"
        android:label="@string/menu_home"
        tools:layout="@layout/fragment_home" >
        <action
            android:id="@+id/action_nav_home_to_fragmentEBook"
            app:destination="@id/fragmentEBook" />
        <action
            android:id="@+id/action_nav_home_to_fragmentQuestion"
            app:destination="@id/fragmentQuestion" />
        <action
            android:id="@+id/action_nav_home_to_fragmentTopicVideo"
            app:destination="@id/fragmentTopicVideo" />
    </fragment>

    <fragment
        android:id="@+id/fragmentQuestion"
        android:name="com.uniedu.ui.fragment.FragmentQuestion"
        android:label="fragment_question"
        tools:layout="@layout/fragment_question" />
    <fragment
        android:id="@+id/fragmentTopicVideo"
        android:name="com.uniedu.ui.fragment.FragmentTopicVideo"
        android:label="fragment_topic_video"
        tools:layout="@layout/fragment_topic_video" />
    <fragment
        android:id="@+id/fragmentEBook"
        android:name="com.uniedu.ui.fragment.FragmentEBook"
        android:label="fragment_e_book"
        tools:layout="@layout/fragment_e_book" />
</navigation>